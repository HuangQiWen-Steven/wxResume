/* components/work/work.wxss */
.resume{
  margin: 0 20px;
}
.section{
  padding-bottom: 30px;
}
.section-info{
  display: flex;
  padding-bottom: 5px;
  margin: 10px 0;
  border-bottom: 1px solid #333;
}
.section-seq{
  margin-right: 10px;
  background-color: #444;
  width: 22px;
  height: 22px;
  color: #fff;
  text-align: center;
  line-height: 22px;
  font-weight: bold;
  margin-top: 3px;
}
.section-title{
  font-size: 18px;
}
.work{
  border-bottom: dashed 1px #999;
  padding: 10px 0;
}
.work:last-of-type{
  border-bottom: none;
}
.company{
  font-size: 16px;
  margin-bottom: 10px;
}
.icon-company{
  width: 22px;
  height: 22px;
  vertical-align: -4px;
  margin-right: 5px;
}
.icon-job{
  width: 18px;
  height: 18px;
  vertical-align: -3px;
  margin-right: 3px;
}
.row{
  display: flex;
  justify-content: space-between;
}
.info{
  font-size: 16px;
  margin-bottom: 10px;
}
.desc{
  color: #999;
  line-height: 1.5;
  font-size: 14px;
}
.page{
  display: block;
  width: 100%;
  text-align: center;
  font-size: 14px;
  padding-bottom: 15px;
}
.icon-calendar{
  width: 17px;
  height: 17px;
  vertical-align: -2px;
  margin-right: 3px;
}


